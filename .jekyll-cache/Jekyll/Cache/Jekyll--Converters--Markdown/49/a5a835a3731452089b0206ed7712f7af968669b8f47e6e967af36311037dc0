<span class="nc">.aa-notification.error</span> <span class="p">{</span>
  <span class="nl">border-left-color</span><span class="p">:</span> <span class="nb">rgb</span><span class="p">(</span><span class="m">230</span><span class="p">,</span> <span class="m">100</span><span class="p">,</span> <span class="m">100</span><span class="p">);</span>
